        <item name="colorPrimaryDark">@color/primary_dark_alt1</item>
        <item name="colorAccent">@color/primary_alt1</item>
    </style>

    <style name="LightThemeAlt2" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorPrimaryDark">@color/dark_background</item>
        <item name="android:colorAccent">@color/primary_alt2</item>
        <item name="android:colorPrimary">@color/primary_alt2</item>
        <item name="colorPrimary">@color/primary_alt2</item>
        <item name="colorAccent">@color/primary_alt2</item>
        <item name="colorPrimaryDark">@color/primary_alt2</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:statusBarColor">@color/primary_alt2</item>
        <item name="android:colorForeground">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColorPrimaryInverse">@color/dark_background</item>
    </style>

    <style name="LightThemeAlt3" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/primary_alt3</item>
        <item name="colorPrimaryDark">@color/primary_dark_alt3</item>
        <item name="colorAccent">@color/primary_alt3</item>
    </style>

    <style name="LightThemeAlt4" parent="@style/grey_we">
        <item name="colorPrimary">@color/primary_alt4</item>
        <item name="colorPrimaryDark">@color/primary_dark_alt4</item>
        <item name="colorAccent">@color/primary_alt4</item>

    </style>

    <style name="LightThemeAlt5" parent="@style/grey_we">
        <item name="colorPrimary">@color/primary_alt5</item>
        <item name="colorPrimaryDark">@color/primary_dark_alt5</item>
        <item name="colorAccent">@color/primary_alt5</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:colorForeground">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColorPrimaryInverse">@color/dark_background</item>
    </style>

    <style name="LightThemeAlt6" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_alt6</item>
        <item name="colorPrimaryDark">@color/primary_dark_alt6</item>
        <item name="colorAccent">@color/primary_alt6</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/BlackMenuText</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
    </style>

    <style name="BlackMenuText" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme.Transparent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="FilePickerTheme" parent="NNF_BaseTheme.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>

        <item name="nnf_toolbarTheme">@style/ToolbarTheme</item>
        <item name="alertDialogTheme">@style/FilePickerAlertDialogTheme</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:colorBackground">@color/about_libraries_card</item>
    </style>

</resources>
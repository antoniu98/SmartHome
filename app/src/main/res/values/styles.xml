<resources>

    <style name="ListName" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GridName" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ListName_secondary" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="Label">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ReadOnly">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="HelpDescription">
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tabtextcolor" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="VariableButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:src">@drawable/ic_variables</item>
        <item name="android:tint">#000</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="grey_we" parent="android:Theme.Holo.NoActionBar.Fullscreen" >
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:hideOnContentScroll"></item>
    </style>

    <style name="FreezingWhite" parent="grey_we" >
        <item name="colorPrimary">@color/freezing_white</item>
        <item name="colorAccent">@color/freezing_white</item>
        <item name="colorPrimaryDark">@color/freezing_white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:colorPrimary">@color/freezing_white</item>
        <item name="android:colorPrimaryDark">@color/freezing_white</item>
        <item name="android:statusBarColor">@color/freezing_white</item>
        <item name="android:colorAccent">@color/freezing_white</item>
        <item name="android:colorForeground">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColorPrimaryInverse">@color/dark_background</item>
    </style>

    <style name="Chill_blue" parent="grey_we" >
        <item name="android:colorAccent">@color/chill_blue</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:colorPrimary">@color/chill_blue</item>
        <item name="android:colorPrimaryDark">@color/dark_background</item>
    </style>

    <style name="JuneBud" parent="grey_we" >
        <item name="android:colorPrimaryDark">@color/dark_background</item>
        <item name="android:colorAccent">@color/june_bud</item>
        <item name="android:colorPrimary">@color/june_bud</item>
        <item name="colorPrimary">@color/june_bud</item>
        <item name="colorAccent">@color/june_bud</item>
        <item name="colorPrimaryDark">@color/june_bud</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:statusBarColor">@color/june_bud</item>
        <item name="android:colorForeground">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColorPrimaryInverse">@color/dark_background</item>
    </style>

    <style name="PurpleDark" parent="Chill_blue" >
        <item name="android:colorPrimaryDark">@color/dark_background</item>
        <item name="android:colorAccent">@color/purple_dark</item>
        <item name="android:colorPrimary">@color/purple_dark</item>
        <item name="colorPrimary">@color/purple_dark</item>
        <item name="colorAccent">@color/purple_dark</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:statusBarColor">@color/purple_dark</item>
        <item name="android:colorForeground">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:textColorPrimaryInverse">@color/dark_background</item>
    </style>

</resources>
